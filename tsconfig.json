{
  "compilerOptions": {
    "baseUrl": "./",
    "typeRoots": ["types"],
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2018", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "~/client/*": ["./src/client/*"],
      "~/server/*": ["./src/server/*"],
      "~/static/*": ["./src/static/*"],
      "~/types/*": ["./src/types/*"]
    }
  },
  "include": ["./src/**/*", "./types/**/*", "./stories/**/*"]
}
